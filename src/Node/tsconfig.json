{
    "compilerOptions":
    {
        "target": "es2017",
        "module": "ES6",
        "moduleResolution": "node",
        "baseUrl": "./",
        "rootDir": "../../",
		"lib":
		[
			"es2017"
		],
        "removeComments": true,
        "downlevelIteration": true,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": true,
		"declaration": true,
        "watch": true
    }
}