{
    "compilerOptions":
    {
        "target": "es2015",
        "module": "ES6",
        "moduleResolution": "node",
        "baseUrl": "./",
        "outDir": "./build/",
		"lib":
		[
			"es2015",
			"es2017",
			"dom"
		],
        "removeComments": true,
        "downlevelIteration": true,
        "alwaysStrict": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": true,
        "watch": true
    }
}